<%= form_for @o_single, :url => countries_path, :method => "get", :remote => true, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend></legend>
 
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :value => (session[:country][:name] unless session[:country].nil?), :class => 'text_field' %>
      </div>
    </div>
 
    <div class="controls">
      <%= f.submit t("general.search"), :class => 'btn btn-primary', :id => 'search_button_id' %>
      <span data-no-turbolink><%= link_to 'Cancel', show_country_search_path(false), :class => 'btn', :remote => true %></span>
		  <span id="spinner" style="display: none;">
		    <%= image_tag "loading.gif" %>
		  </span>
    </div>
    
  </fieldset>
     
<% end %>

<script type="text/javascript">
$(document).ready(function() {
  $('#search_button_id').click (function() {
    $("#spinner").show();
  });  
});
</script>
