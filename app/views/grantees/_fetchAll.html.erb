<table class="table table-striped">
 <thead> 
  <tr>
  	
  	<th width="40%"><%= sortable "grantee_unique_id", t("general.entity_unique_id") %></th>
  	<th width="20%"><%= sortable "surname", t("general.surname") %></th>
    <th width="20%"><%= sortable "first_name", t("general.first_name") %></th>
		<th width="20%"><%= t("general.actions") %></th>	
  </tr>
 </thead> 
  
  <tbody>
    <% if @o_all.size > 0 %>
      <% @o_all.each do |o_row| %>
        <tr>
        	<td><%= o_row.id %></td>
        	<td><%= o_row.surname %></td>
          <td><%= o_row.first_name %></td>
          <td>
          	<%= link_to t("general.docs"), folders_path(:type_id => o_row.id, :type => "Grantee"), :class => 'btn btn-mini', :title => t("general.documents") %>
			      <%= link_to t('.edit', :default => t("helpers.links.edit")),
			                  edit_grantee_path(o_row), :class => 'btn btn-mini' %>
			      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			                  grantee_path(o_row),
			                  :method => :delete,
			                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			                  :class => 'btn btn-mini btn-danger' %>          
							<%= link_to "Graves",
							            grantee_grafe_path(o_row),
							            :class => 'btn btn-primary btn-mini' %>  
	       </td> 	
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="6"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>
<div class="fRight">
	<%= will_paginate @o_all %>
</div>	