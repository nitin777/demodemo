<% unless @catalog.nil? %>
	<div class="control-group">
	  <label class = 'control-label'><%= t("general.price") %></label>
	  <div class="controls">
	    <%= select_tag "price", options_for_select([["Select", ""]] + [["Cost Price", @catalog.cost_price]] + [["Special Cost Price", @catalog.special_cost_price]]),
	        							:data => { :remote => true, :url => url_for(:controller => "payments", 
	                                 :action => "get_amount_from_price",
	                                 :class => 'selectField'
	                                 ) } %>	    
	  </div>
	</div>
<% end %>	
<div id="div_update_amount"></div>
<div id="spinner" style="margin: 0px; left: 0px; display: none;" class="loaderimgText">
  <%= image_tag "loader.gif" %><br><div class="backTransparant"></div>
</div>
<script type="text/javascript">
$('#price').change(function() {
	$("#spinner").show();
});
</script>