<% unless @catalogs.nil? %>
<div class="control-group">
  <label class="control-label"><%= t("general.select_item") %></label>
  <div class="controls">
    <%= select_tag "payment[catalog_id]", options_for_select([["Select", ""]] + @catalogs.collect {|r| [r.name, r.id]}),
	        							:data => { :remote => true, :url => url_for(:controller => "payments", 
                                   :action => "get_cost_price_from_catalog",
                                   :class => 'selectField'
                                   ) }  %>
  </div>
</div>
<% end %>
<div id="div_update_cost_price"></div>

<div id="spinner" style="margin: 0px; left: 0px; display: none;" class="loaderimgText">
  <%= image_tag "loader.gif" %><br><div class="backTransparant"></div>
</div>
<script type="text/javascript">
$('#payment_catalog_id').change(function() {
	$("#spinner").show();
});
</script>
