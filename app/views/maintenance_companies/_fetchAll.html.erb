<table class="table table-striped">
 <thead> 
  <tr>
    <th width="10%"><%= sortable "name", t("general.name") %></th>
    <th width="10%"><%= sortable "email", t("general.email") %></th>    
    <th width="10%"><%= sortable "phone", t("general.phone") %></th>    
    <th width="10%"><%= sortable "mobile", t("general.mobile") %></th>
    <th width="15%"><%= sortable "work_email", t("general.work_email") %></th>
    <th width="15%"><%= sortable "work_number", t("general.work_number") %></th>
    <th width="10%"><%= sortable "is_active", t("general.is_active") %></th>
    <th width="10%"><%= t("general.actions") %></th>
  </tr>
 </thead> 
  
  <tbody>
    <% if @o_all.size > 0 %>
      <% @o_all.each do |o_row| %>
        <tr>
          <td><%= o_row.name %></td>
          <td><%= o_row.email %></td>
          <td><%= o_row.phone %></td>
          <td><%= o_row.mobile %></td>          
          <td><%= o_row.work_email %></td>
          <td><%= o_row.work_number %></td>
          <td><%= o_row.is_active ? image_tag("Yes.gif") : image_tag("No.gif") %></td>
          <td> 
			      <%= link_to t('.edit', :default => t("helpers.links.edit")),
			                  edit_maintenance_company_path(o_row), :class => 'btn btn-mini' %>
			      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			                  maintenance_company_path(o_row),
			                  :method => :delete,
			                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			                  :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="8"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>
<div class="fRight">
	<%= will_paginate @o_all %>
</div>	