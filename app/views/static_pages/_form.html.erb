<%= form_for @o_single, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend></legend>
 
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
       	<% if @o_single.errors[:name].any? %>
        	<i class="text-error"><%= @o_single.errors[:name].first %></i>
      	<% end %> 
      </div>
    </div>
 
    <div class="control-group">
      <%= f.label :page_route, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.text_field :page_route, :class => 'text_field' %>
       	<% if @o_single.errors[:page_route].any? %>
        	<i class="text-error"><%= @o_single.errors[:page_route].first %></i>
      	<% end %>        
      </div>
    </div> 
 
    <div class="control-group">
      <%= f.label :content, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :content, :class => 'textAreaMidium' %>
      </div>
    </div> 
 
    <div class="control-group">
      <%= f.label :is_footer, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :is_footer, :class => 'check_box' %>
      </div>
    </div> 
 
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', static_pages_url, :class => 'btn' %>
    </div>
    
  </fieldset>
     
<% end %>