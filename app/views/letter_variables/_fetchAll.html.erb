<table class="table table-striped">
 <thead> 
  <tr>
    <th width="80%"><%= t("general.letter_variables") %></th>
    <th width="10%"><%= t("general.type") %></th>
    <th width="10%"><%= t("general.actions") %></th>
  </tr>
 </thead> 
  
  <tbody>
    <% if @o_all.size > 0 %>
      <% @o_all.each do |o_row| %>
        <tr>
          <td><%= o_row.content.html_safe %></td>
          <td><%= o_row.is_certificate ? "Certificate" : "Letter" %></td>
          <td> 
			      <%= link_to t('.edit', :default => t("helpers.links.edit")),
			                  edit_letter_variable_path(o_row), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="6"><%= t("general.record_not_found") %></th></tr>
    <% end %>
  </tbody>
</table>
<div class="fRight">
	<%= will_paginate @o_all %>
</div>	