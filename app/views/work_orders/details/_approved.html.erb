<div class="control-group">
  <%= f.label :approved_by, :class => 'control-label' %>
  <div class="controls">
    <%= f.select :approved_user_id, options_for_select(get_normal_staff, (@o_single.approved_by.id unless @o_single.approved_by.nil?)) %>
  </div>
</div>
<div class="control-group">
  <%= f.label :approved, :class => 'control-label' %>
  <div class="controls">
    <%= f.check_box :approved, :class => 'check_box' %>
  </div>
</div>  
<div class="control-group">
  <%= f.label :approved_date, :class => 'control-label' %>
  <div class="controls">
		<div id="approved_date" class="input-append">
			<%= f.text_field :approved_date, :class => 'text_field' %>
	    <span class="add-on">
	      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
	      </i>
	    </span> 				
		</div>	
  </div>
</div>
<div class="control-group"><%= f.label :operation_notes, :class => 'control-label' %><div class="controls"><%= f.text_area :operation_notes, :class => 'text_field' %></div></div>
