<script type="text/javascript">
	$(document).ready(function() {
	  $('.btn').click (function() {
	    $("#spinner").show();
	  });
	});
</script>
<%= form_for @o_single, :method => "get", :remote => true, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend></legend>
 
 		<% @params_arr.each do |p| %>
	    <div class="control-group">
	      <%= f.label p.capitalize, :class => 'control-label' %>
	      <div class="controls">
	        <%= f.text_field p, :value => (session[:search_params] ? session[:search_params][p] : ""), :class => 'text_field' %>
	      </div>
	    </div>
  	<% end %> 
   <% model_name = params[:model].downcase %>
    <div class="controls">
      <%= f.submit t("general.search"), :class => 'btn btn-primary', :id => 'search_button_id' %>
      <span data-no-turbolink>
      <%= link_to 'Cancel', url_for(:action => 'index', :controller => model_name.pluralize), :class => 'btn' %></span>
    </div>
    
  </fieldset>
     
<% end %>
