<table id="box-table-a">
 <thead> 
  <tr>
    <th width="15%" scope="col"><%= t("general.name") %></th>
    <th width="10%" scope="col"><%= t("general.area") %></th>
    <th width="10%" scope="col"><%= t("general.section") %></th>    
    <th width="10%" scope="col"><%= t("general.row") %></th>    
    <th width="10%" scope="col"><%= t("general.plot") %></th>
    <th width="10%" scope="col"><%= t("general.grave") %></th>
    <th width="15%" scope="col"><%= t("general.entity") %></th>
    <th width="10%"><%= t("general.intermentDate") %></th>
    <th width="10%" scope="col"><%= t("general.actions") %></th>
  </tr>
 </thead> 
  
  <tbody>
    <% if @interments.size > 0 %>
      <% @interments.each do |o_row| %>
        <tr>
          <td><%= o_row.deceased_name %></td>
          <td><%= o_row.area.code unless o_row.area_id.nil? %></td>
          <td><%= o_row.section.code unless o_row.section_id.nil? %></td>
          <td><%= o_row.row.name unless o_row.row_id.nil? %></td>
          <td><%= o_row.plot.name unless o_row.plot_id.nil? %></td>
          <td><%= (link_to o_row.grafe.grave_number, interment_grave_details_url(o_row.grafe.id), :onclick=>"window.open(this.href,'interment_grave_details', 'height=600, width=600');return false;") unless o_row.grafe_id.nil? %></td>
          <td><%= (link_to o_row.grantee.name, interment_grantee_details_url(o_row.grantee.id), :onclick=>"window.open(this.href,'interment_grantee_details', 'height=600, width=600');return false;") unless o_row.grantee_id.nil? %></td>
          <td><%= o_row.interment_date.to_s(:default_date) if o_row.interment_date %></td>
          <td><%= link_to t("general.details"), interment_details_url(o_row.id), :onclick=>"window.open(this.href,'interment_details', 'height=600, width=600');return false;" %>
          <td></td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="8"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>