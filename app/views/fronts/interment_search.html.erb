<table class="box-table">
 <thead> 
  <tr>
    <th width="15%"><%= t("general.name") %></th>
    <th width="10%"><%= t("general.area") %></th>
    <th width="10%"><%= t("general.section") %></th>    
    <th width="10%"><%= t("general.row") %></th>    
    <th width="10%"><%= t("general.plot") %></th>
    <th width="10%"><%= t("general.grave") %></th>
    <th width="10%"><%= t("general.entity") %></th>
    <th width="10%"><%= t("general.date") %></th>
    <th width="10%"><%= t("general.actions") %></th>
  </tr>
 </thead> 
  
  <tbody>
    <% if @interments.size > 0 %>
      <% @interments.each do |o_row| %>
        <tr>
          <td><%= o_row.deceased_name %></td>
          <td><%= o_row.area.code unless o_row.area_id.nil? %></td>
          <td><%= o_row.section.code unless o_row.section_id.nil? %></td>
          <td><%= o_row.row.name unless o_row.row_id.nil? %></td>
          <td><%= o_row.plot.name unless o_row.plot_id.nil? %></td>
          <td><%= o_row.grafe.grave_number unless o_row.grafe_id.nil? %></td>
          <td><%= o_row.grantee.name unless o_row.grantee_id.nil? %></td>
          <td><%= o_row.interment_date.to_s(:month_day_and_year) if o_row.interment_date %></td>
          <td><%= link_to t("general.details"), interment_details_url(o_row.id) %></td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="8"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>
