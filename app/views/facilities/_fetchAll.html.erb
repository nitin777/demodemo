<table class="table table-striped">
 <thead> 
  <tr>
  	<th width="25%"><%= sortable "surname", t("general.name") %></th>
    <th width="15%"><%= sortable "phone", t("general.phone") %></th>
    <th width="15%"><%= sortable "is_finalized", t("general.is_finalized") %></th>
		<th width="25%"><%= t("general.actions") %></th>	
  </tr>
 </thead> 
  
  <tbody>
    <% if @o_all.size > 0 %>
      <% @o_all.each do |o_row| %>
        <tr>
          <td><%= o_row.name %></td>
          <td><%= o_row.phone %></td>
          <td><%= o_row.is_finalized ? image_tag("Yes.gif") : image_tag("No.gif") %></td>
          <td>
          	<%= link_to t("general.payments"), facility_payments_path(o_row.id), :class => 'btn btn-mini', :title => t("general.payments") %>          	
			      <%= link_to t('.edit', :default => t("helpers.links.edit")),
			                  edit_facility_path(o_row), :class => 'btn btn-mini' %>
			      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			                  facility_path(o_row),
			                  :method => :delete,
			                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			                  :class => 'btn btn-mini btn-danger' %>          
	       </td> 	
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="6"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>
<div class="fRight">
	<%= will_paginate @o_all %>
</div>	