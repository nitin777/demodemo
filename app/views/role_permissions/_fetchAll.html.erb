<table class="table table-striped">
 <thead> 
  <tr>
  	<th width="20%"><%= t("general.role") %></th>
    <th width="20%"><%= t("general.user_access") %></th>
    <th width="20%"><%= t("general.cemetery_access") %></th>
    <th width="20%"><%= t("general.booking_access") %></th>
    <th width="20%"><%= t("general.maintenance_access") %></th>
  </tr>
 </thead> 
  
  <tbody>
    <% if @o_all.size > 0 %>
      <% @o_all.each do |o_row| %>
        <tr>
          <td><%= o_row.role.role_type %></td>
          <td><%= o_row.user_access ? (link_to image_tag("Yes.gif"), set_permission_path(o_row.id, 'user'), :remote => true) : (link_to image_tag("No.gif"), set_permission_path(o_row.id, 'user'), :remote => true) %></td>
          <td><%= o_row.cemetery_access ? (link_to image_tag("Yes.gif"), set_permission_path(o_row.id, 'cemetery'), :remote => true) : (link_to image_tag("No.gif"), set_permission_path(o_row.id, 'cemetery'), :remote => true) %></td>
          <td><%= o_row.booking_access ? (link_to image_tag("Yes.gif"), set_permission_path(o_row.id, 'booking'), :remote => true) : (link_to image_tag("No.gif"), set_permission_path(o_row.id, 'booking'), :remote => true) %></td>
          <td><%= o_row.maintenance_access ? (link_to image_tag("Yes.gif"), set_permission_path(o_row.id, 'maintenance'), :remote => true) : (link_to image_tag("No.gif"), set_permission_path(o_row.id, 'maintenance'), :remote => true) %></td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="6"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>