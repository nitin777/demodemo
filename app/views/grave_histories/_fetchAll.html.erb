<table class="table table-striped">
 <thead> 
  <tr>
    <th width="30%"><%= sortable "grantee_id", t("general.transfer_from") %></th>
    <th width="30%"><%= sortable "grantee_trasfer_id", t("general.transfer_to")%></th>
    <th width="30%"><%= sortable "surrender_date", t("general.surrender_date")%></th>
    <th width="10%"><%= t("general.actions") %></th>
  </tr>
 </thead> 
  
  <tbody>
    <% if @o_all.size > 0 %>
      <% @o_all.each do |o_row| %>
        <tr>
          <td><%= o_row.grantee.name unless o_row.grantee.nil? %></td>
          <td><%= o_row.grantee_trasfer.name unless o_row.grantee_trasfer.nil? %></td>
          <td><%= o_row.surrender_date.to_s(:pretty) if o_row.surrender_date %></td>
          <td>
			      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			                  grave_history_path(o_row),
			                  :method => :delete,
			                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			                  :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="6"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>
<div class="fRight">
	<%= will_paginate @o_all %>
</div>	