<table class="table table-striped">
 <thead> 
  <tr>
    <th width="70%"><%= sortable "subject", t("general.subject") %></th>
    <th width="10%"><%= sortable "is_certificate", t("general.certificate") %></th>
    <th width="5%"><%= sortable "is_active", t("general.is_active") %></th>
    <th width="15%"><%= t("general.actions") %></th>
  </tr>
 </thead> 
  
  <tbody>
    <% if @o_all.size > 0 %>
      <% @o_all.each do |o_row| %>
        <tr>
          <td><%= o_row.subject %></td>
          <td><%= o_row.is_certificate ? image_tag("Yes.gif") : image_tag("No.gif") %></td>
          <td><%= o_row.is_active ? image_tag("Yes.gif") : image_tag("No.gif") %></td>
          <td> 
			      <%= link_to t('.edit', :default => t("helpers.links.edit")),
			                  edit_letter_path(o_row), :class => 'btn btn-mini' %>
			      <% unless o_row.is_certificate %>            
				      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
				                  letter_path(o_row),
				                  :method => :delete,
				                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
				                  :class => 'btn btn-mini btn-danger' %>
				    <% end %>              
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="6"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>
<div class="fRight">
	<%= will_paginate @o_all %>
</div>	