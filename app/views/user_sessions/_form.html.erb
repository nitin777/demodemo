<div class="login">
  <h1>Login</h1>
  <div class="clearBoth">&nbsp;</div>
  <%= form_for @user_session, :html => { :class => 'form-horizontal' } do |f| %>
    
      	<% @user_session.errors.full_messages.each do |msg| %>
      		<% @msg_var = "general.#{msg.gsub(' ', "_")}" %>
      		<p class="text-error">
	      		<%= t(@msg_var) %>
	      	</p>	
	    	<% end %>
    
    <p><%= f.text_field :username, :placeholder => 'Username' %></p>
    <p><%= f.password_field :password, :placeholder => 'Password' %></p>
    <p class="submit"><%= f.submit t("general.login"), :class => '' %></p>
  <% end %>
</div>

<div class="login-help">
  <p><%= link_to t("general.click_here_to_recover_your_account"), forgot_password_path, :class => '' %></p>
</div>