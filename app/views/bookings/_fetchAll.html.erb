<table class="table table-striped">
 <thead> 
  <tr>
    <th width="15%"><%= sortable "surname", t("general.name") %></th>
    <th width="10%"><%= sortable "service_type", t("general.service") %></th>
    <th width="10%"><%= sortable "service_date", t("general.date") %></th>
    <th width="5%"><%= sortable "service_time_from", t("general.from") %></th>
    <th width="5%"><%= sortable "service_time_to", t("general.to") %></th>
    <th width="15%"><%= sortable "consultant", t("general.consultant") %></th>
    <th width="15%"><%= sortable "user_id", t("general.taken_by") %></th>
    <th width="20%"><%= t("general.actions") %></th>
  </tr>
 </thead> 
  
  <tbody>
    <% if @o_all.size > 0 %>
      <% @o_all.each do |o_row| %>
        <tr>
          <td><%= o_row.deceased_name %></td>
          <td><%= o_row.service_type.name unless o_row.service_type.nil? %></td>
          <td><%= o_row.service_date.to_s(:pretty) if o_row.service_date %></td>
          <td><%= o_row.service_time_from.to_s(:pretty_time) if o_row.service_time_from %></td>
          <td><%= o_row.service_time_to.to_s(:pretty_time) if o_row.service_time_to %></td>
          <td><%= o_row.consultant %></td>
          <td><%= o_row.user.name unless o_row.user.nil? %></td>
          <td> 
			      <%= link_to t('.edit', :default => t("helpers.links.edit")),
			                  edit_booking_path(o_row), :class => 'btn btn-mini' %>
			      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			                  booking_path(o_row),
			                  :method => :delete,
			                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			                  :class => 'btn btn-mini btn-danger' %>
			      <span data-no-turbolink>
			      	<% if o_row.is_finalized %>
				      	<%= link_to t("general.finalize"),
				                  bookings_path(:id => o_row.id), :class => 'btn btn-mini', data: { confirm: t("general.are_you_sure_to_unfinalize") } %>
				      <% else %>
				      	<%= link_to t("general.finalize"),
				                  bookings_path(:id => o_row.id), :class => 'btn btn-mini', data: { confirm: t("general.are_you_sure_to_finalize") } %>				      
				      <% end %>            
			      </span>			                  
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><th colspan="8"><%= t("general.record_not_found") %></th></tr>
    <% end %>      
  </tbody>
</table>
<div class="fRight">
	<%= will_paginate @o_all %>
</div>	